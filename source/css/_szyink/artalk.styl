#comments
  overflow: inherit
#artalk_container
  input,textarea,
  .atk-send-btn,
  .atk-item.atk-nick a
    font-size 0.9rem
  .atk-header,.atk-comment-count,
  .atk-right-action>span,
  .atk-actions>span,
  .atk-actions-new>span,
  .artalk pre code,
  .atk-layer-wrap pre code
    font-size 0.8rem
  font-family $fontfamily
  font-size 0.9rem
  code
    *
      font-family $fontfamily-code
    color var(--color-inlinecode)
    font-family $fontfamily-code
    &:before
      margin-top -5px
  .atk-editor-plug-emoticons
    max-width: 496px
  @media screen and (min-width: 840px)
    .atk-comment-children .atk-comment-wrap 
      .atk-main:hover
        .atk-footer
          top 6px
        .atk-footer .atk-actions
          padding-top 3px
  .atk-content 
    img[src*="huyao"]
      width 100px
      max-height 100px
    img[src*="aniya"]
      width 210px
      max-height 210px
      display block
      border-radius 8px
    img[src*="qq"]
      height 39px
      width 39px
  .atk-grp>.atk-item
    width unset !important
    height unset !important
    img
      height 53px
      width 53px
    img[src*="quyin"]
      height 53px
      width 53px
    img[src*="huyao"]
      height 78px
      width 78px
    img[src*="aniya"]
      border-radius 4px
      height 80px
      width 80px
    img[src*="qq"]
      height 38px
      width 38px
  .atk-header .atk-badge
    padding: 0.2rem

#owo-big p
  margin-top -4px !important
