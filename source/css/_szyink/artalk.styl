#comments
  overflow: inherit
#artalk_container
  input,textarea,
  .atk-send-btn,
  .atk-item.atk-nick a
    font-size 0.9rem
  .atk-header,.atk-comment-count,
  .atk-right-action>span,
  .atk-actions>span,
  .atk-actions-new>span,
  .artalk pre code,
  .atk-layer-wrap pre code
    font-size 0.8rem
  font-family $fontfamily
  font-size 0.9rem
  code
    *
      font-family $fontfamily-code
    color var(--color-inlinecode)
    font-family $fontfamily-code
  .atk-editor-plug-emoticons
    max-width: 495px
    height: 243px
    white-space: nowrap
    .atk-grp-switcher
      display: inline-flex;
      overflow-y: hidden;
      align-items: center;
  .atk-content 
    img[src*="huyao"]
      width 100px
      max-height 100px
    img[src*="aniya"]
      width 210px
      max-height 210px
      display block
      border-radius 8px
    img[src*="qq"]
      height 39px
      width 39px
  .atk-grp>.atk-item
    width unset !important
    height unset !important
    img
      height 53px
      width 53px
    img[src*="huyao"]
      height 79px
      width 79px
    img[src*="aniya"]
      border-radius 4px
    img[src*="qq"]
      height 38px
      width 38px
  .atk-header .atk-badge
    padding: 0.2rem


#artalk_container
    &[atk-emoticon][src*="qq"].error:after
      font-size: 0.5rem


#owo-big
  p
    margin-top -4px !important
