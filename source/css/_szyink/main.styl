// 暗黑模式按钮
.temp-darkmode-toggle
  background: #333;
  width: 3rem;
  height: 3rem;
  position: fixed;
  border-radius: 50%;
  border: none;
  right: unset;
  bottom: 32px;
  left: 16px;
  cursor: pointer;
  transition: all 0.5s ease;
  display: flex;
  justify-content: center;
  align-items: center;

//=============//
//   文字滚动   //
//=============//
.text-animate
  padding-left 20px
  font-size 12px
  color #000
  white-space nowrap
  animation 4s wordsLoop linear infinite alternate
  display inline-block

@keyframes wordsLoop
  0% 
    transform: translateX(0px)
    -webkit-transform: translateX(0px)
  100% 
    transform: translateX(-100% + 60px)
    -webkit-transform: translateX(-100% + 60px)
    
@-webkit-keyframes wordsLoops
  0% 
    transform: translateX(0px)
    -webkit-transform: translateX(0px)
  100% 
    transform: translateX(-100%)
    -webkit-transform: translateX(-100%)


