//   样式覆盖   //
//=============//
// 下划线设置
.article a:not([class]):not([data-fancybox]),
.content > a
    position: relative
    text-decoration: none
    &:before
      content: "";
      position: absolute;
      left: 0;
      bottom: -1px
      height: 1px
      width: 100%
      background: #ff5722
      transform: scale(0)
      transition: all 0.5s
    &:hover:before
      transform: scale(1)

// 设置code样式
  code
    &:not([class])
      padding: 4px 4px 3px 4px
      vertical-align: middle
      color: unset !important

